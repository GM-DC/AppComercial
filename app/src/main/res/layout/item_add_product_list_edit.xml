<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e4e4e4"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@drawable/ic_almacen"
                app:tint="@color/colorPrimaryDark" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/linearLayout13"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_nameProducto"
                        style="@style/sizeTextView"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="MOUSE ERGONOMICO KLIP"
                        android:textColor="@color/negro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_codProducto"
                        style="@style/sizeTextView"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_nameProducto"
                        android:fontFamily="sans-serif-condensed"
                        android:text="MOUS0001"
                        android:textColor="@color/negro" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_nameProducto"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_precioUnidad"
                            style="@style/sizeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Precio Unit: S/."
                            android:textColor="@color/negro" />

                        <EditText
                            android:id="@+id/tv_precioUnidadDinero"
                            style="@style/sizeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:background="@color/white"
                            android:fontFamily="sans-serif-condensed"
                            android:paddingHorizontal="8dp"
                            android:text="350.00"
                            android:maxLines="1"
                            android:digits="1234567890."
                            android:textColor="@color/negro" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_cantidadTexto"
                        style="@style/sizeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Cantidad: "
                        android:textColor="@color/negro" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_nameProducto"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_precioTotal"
                            style="@style/sizeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Precio Total: S/."
                            android:textColor="@color/negro" />

                        <TextView
                            android:id="@+id/tv_precioTotalDinero"
                            style="@style/sizeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:fontFamily="sans-serif-condensed"
                            android:padding="0dp"
                            android:text="350.00"
                            android:textColor="@color/negro" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/iv_btnAutementar"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:background="@drawable/btn_image_view"
                        android:src="@drawable/ic_add"
                        app:tint="@color/colorPrimaryDark" />

                    <EditText
                        android:id="@+id/tv_cantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_gravity="center"
                        android:text="1000"
                        android:maxLines="1"
                        android:digits="1234567890"
                        android:paddingHorizontal="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/negro"
                        android:background="@color/white"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_btnDisminuir"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:background="@drawable/btn_image_view"
                        android:src="@drawable/ic_less"
                        app:tint="@color/colorPrimaryDark" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_btnCerrar"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/btn_image_view"
                    android:src="@drawable/ic_close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorPrimaryDark" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginVertical="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/iv_btnGuardar"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_image_view"
            android:text="Guardar"
            android:textColor="@color/colorPrimaryDark"
            app:tint="@color/colorPrimaryDark" />




    </LinearLayout>

</androidx.cardview.widget.CardView>